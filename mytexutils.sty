% \ReviewedDate[jp or en]
\newcommand{\MyReviewedDate}[1][jp]{
    \ifthenelse{\equal{#1}{jp}}{
        （\the\year 年 \the\month 月 \the\day 日閲覧．）
    }{\ifthenelse{\equal{#1}{en}}{
         (reviewed on \today.)
    }{
        \color[red]{jp もしくは en を引数としてください．}
    }}
}

